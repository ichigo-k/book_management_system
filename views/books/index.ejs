<div class="w-full flex justify-between p-2 items-center ">

    <h2 class="text-xl font-bold">
        View Books 
    </h2>

    <a href="/books/new" class="bg-indigo-500 text-white p-2 rounded-md shadow-lg whitespace-nowrap ">Add Book</a>
</div>

<hr/>



<%- include("_book_filter") %>

 <div class="w-full mt-5 flex justify-center ">
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 p-4">
            <% books.forEach(book => { %>
                <div class="flex flex-col items-center">
                    <img src="<%= book.coverImageURL %>" alt="book" class="w-40 h-60 object-cover rounded-md shadow-lg">
                </div>
            <% }) %>
        </div>
</div>


